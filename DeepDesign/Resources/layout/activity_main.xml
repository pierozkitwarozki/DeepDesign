
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <!--Section one-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <RelativeLayout 
            android:background="@drawable/rounded_edges"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <de.hdodenhof.circleimageview.CircleImageView                   
                android:id="@+id/profileImage"
                android:layout_centerVertical="true"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/personal1"/>
            <TextView
                android:id="@+id/nameTextView"
                android:layout_toRightOf="@+id/profileImage"
                android:text="Jan Kowalski"
                android:textStyle="bold"
                fontPath="Fonts/GlacialIndifference-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/placeTextView"
                android:layout_below="@+id/nameTextView"
                android:layout_toRightOf="@+id/profileImage"
                android:text="New York, USA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/phonecall"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <!--Rating Stars-->
            <LinearLayout
                android:layout_below="@+id/placeTextView"
                android:layout_toRightOf="@+id/profileImage"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/star"
                    android:tint="@color/colorOrangeStar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:src="@drawable/star"
                    android:tint="@color/colorOrangeStar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:src="@drawable/star"
                    android:tint="@color/colorOrangeStar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:src="@drawable/star"
                    android:tint="@color/colorOrangeStar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!--Section two-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22">

        <TextView
            android:id="@+id/balanceTextView"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerInParent="true"
            fontPath="Fonts/GlacialIndifference-Bold.ttf"
            android:text="$ 32,700,45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_above="@+id/balanceTextView"
            android:text="Account Balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!--Section three-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <RelativeLayout
            android:background="@drawable/rounded_edges"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend1ImageView"
                android:layout_centerVertical="true"
                android:src="@drawable/profile1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friend1ImageView"
                android:textStyle="bold"
                android:text="Transfer to Julia"
                fontPath="Fonts/GlacialIndifference-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="20-May-2020"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friend1ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ammountTextView"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/colorRed"
                android:layout_alignParentRight="true"
                android:text="-$2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="View"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_below="@+id/ammountTextView"
                android:layout_alignParentRight="true"               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edges"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend2ImageView"
                android:layout_centerVertical="true"
                android:src="@drawable/personal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/description2TextView"
                android:layout_toRightOf="@+id/friend2ImageView"
                android:textStyle="bold"
                android:text="Transfer from Jacob"
                fontPath="Fonts/GlacialIndifference-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="11-May-2020"
                android:layout_below="@+id/description2TextView"
                android:layout_toRightOf="@+id/friend2ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ammount2TextView"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/colorGreen"
                android:layout_alignParentRight="true"
                android:text="$6070"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="View"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_below="@+id/ammount2TextView"
                android:layout_alignParentRight="true"               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edges"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend3ImageView"
                android:layout_centerVertical="true"
                android:src="@drawable/me"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/description3TextView"
                android:layout_toRightOf="@+id/friend3ImageView"
                android:textStyle="bold"
                android:text="Transfer from Peter"
                fontPath="Fonts/GlacialIndifference-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="06-May-2020"
                android:layout_below="@+id/description3TextView"
                android:layout_toRightOf="@+id/friend3ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ammount3TextView"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/colorGreen"
                android:layout_alignParentRight="true"
                android:text="$1200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="View"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_below="@+id/ammount3TextView"
                android:layout_alignParentRight="true"               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button 
                    android:background="@drawable/rounded_button"
                    android:drawableLeft="@drawable/history"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textAllCaps="false"
                    android:text="View History"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:background="@drawable/rounded_button"
                    android:drawableLeft="@drawable/money"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textAllCaps="false"
                    android:text="New Transfer"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    

   
</LinearLayout>